<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ListRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_shadow_end_color"
    android:orientation="horizontal"
    android:padding="5dp">

    <Space
        android:layout_width="13dp"
        android:layout_height="88dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/registered_hopital_list_item_design"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_services"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/ic_launcher_round">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/services_name"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:gravity="center|start"
                android:text="service_name"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold|italic"></TextView>

            <TextView
                android:id="@+id/services_desc"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginBottom="10dp"
                android:text="service_desc"
                android:textColor="#ffffff"
                android:textSize="10sp"></TextView>
        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="19dp"
        android:layout_height="88dp"
        android:layout_weight="1" />


</LinearLayout>